<!-- Modal -->
<div class="modal" id="userDataModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with model: @person, url: :ways_of_the_guitar_submit, method: :post do |form| %>
          <div class="row mb-3">
            <div class="col-md-6">
              <%= form.label :first_name, class: 'text-gray-600' %>
              <%= form.text_field :first_name, class: 'form-control' %>
            </div>
            <div class="col-md-6">
              <%= form.label :last_name, class: 'text-gray-600' %>
              <%= form.text_field :last_name, class: 'form-control' %>
            </div>
          </div>
          <div class="mb-3">
            <%= form.label :email, class: 'text-gray-600' %>
            <%= form.email_field :email, class: 'form-control' %>
          </div>
          <div class="d-grid">
          </div>
          </div>
          <div class="modal-footer">
            <%= form.submit "Get your copy!", class: "btn btn-primary fw-500" %>
            <!--        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
            <!--        <button type="button" class="btn btn-primary">Save changes</button>-->
          </div>
        <% end %>
        </div>
  </div>
</div>